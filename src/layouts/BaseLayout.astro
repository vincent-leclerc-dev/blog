<style is:global>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;

  @layer components {
    .all-\[unset\] {
      all: unset;
    }
  }

  :root {
    --black: rgba(0, 0, 0, 1);
    /*--blue: rgba(60, 132, 251, 1);*/
    --darkgray: rgba(34, 34, 34, 1);
    --softgray: rgba(216, 221, 227, 1);
    --variable-collection-white: rgba(255, 255, 255, 1);
    --white: rgba(255, 255, 255, 1);
  }

  html {
    background-color: #111111;
    height: 100%;
    width: 100%;
    scroll-behavior: smooth;
  }

  /* Change Autocomplete styles in Chrome*/
  input:-webkit-autofill,
  input:-webkit-autofill:hover,
  input:-webkit-autofill:focus,
  textarea:-webkit-autofill,
  textarea:-webkit-autofill:hover,
  textarea:-webkit-autofill:focus,
  select:-webkit-autofill,
  select:-webkit-autofill:hover,
  select:-webkit-autofill:focus {
    border: 1px solid #222222;
    -webkit-text-fill-color: white;
    -webkit-box-shadow: 0 0 0px 1000px #222222 inset;
    box-shadow: 0 0 0px 1000px #222222 inset;
    transition: background-color 5000s ease-in-out 0s;
    color: white;
  }

  textarea {
    border: none;
    overflow: auto;
    outline: none;

    -webkit-box-shadow: none;
    -moz-box-shadow: none;
    box-shadow: none;

    resize: none; /*remove the resize handle on the bottom right*/
  }

  /* width */
  ::-webkit-scrollbar {
    width: 10px;
  }

  /* Track */
  ::-webkit-scrollbar-track {
    background: #000000;
    border-radius: 6px;
  }

  /* Handle */
  ::-webkit-scrollbar-thumb {
    background: #000000;
    border-radius: 6px;
  }

  /* Handle on hover */
  ::-webkit-scrollbar-thumb:hover {
    background: linear-gradient(0deg, #2a1683 0%, #5c0099 100%);
  }

  .grecaptcha-badge {
    visibility: hidden;
  }
</style>
